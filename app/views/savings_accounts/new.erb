<p><a href="/"><img src="images/isave_logo.png" alt="iSave Logo"></a><h1>Create A New Savings Account</h1></p>
<br>
<br>
<div>
<form method ="post" action ="/savings">
    <label>Item</label>
    <input type ="text" id="item" name="item" required>
    <label>Price</label>
    <input type ="text" id="price" name="price" required>
    <label>Amount Saved</label>
    <input type ="text" id="amount_saved" name="amount_saved" required>
    <label>Priority</label>
      <select name="priority_level" required>
        <option value=""></option>
        <option value="Low">Low</option>
        <option value="Medium">Medium</option>
        <option value="High">High</option>
      </select>
    <br>
    <br>
    <p><input type ="submit" class="myButton" value="Create">
    <a href="/savings"><button type="button" class="myButton">Cancel</button></a></p>
</form>
</div>
