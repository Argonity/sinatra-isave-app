<p><h1><%= current_user.name %>'s Savings Accounts
<a href="/logout"><button type="button" class="myButton" style="float:right;">Logout</button></a>
<a href="/savings"><button type="button" class="myButton" style="float:right;"><%= current_user.name %></button></a></h1></p>
<br>
<a href="/savings/new"><button type="button" class="myButton" style="margin-left:20px;">Create A New Savings Account</button></a>
<br>
<br>
<% @savings.each do |savings| %>
  <center>
    <div style="">
      <p><b><%= savings.item %></b></p>
      <p>$<%= savings.price %></p>
      <p>$<%= savings.amount_saved %></p>
      <p><%= savings.priority_level %></p>
      <p><a href="/savings/<%=savings.id%>/edit"><button type="button" class="myButton">Edit</button></a>
          <a href="/savings/<%=savings.id%>/delete"><button type="button" class="myButton">Delete</button></a></p>
    </div>
  </center>
<% end %>
